@model IEnumerable<GenshinCourse.course>

    @{
    ViewBag.Title = "Index";
    }

    <h2>Daftar List Course</h2>

    <p>

        @if(Session["UserId"] != null)
{
        @Html.ActionLink("Create New", "Create")
}else{
}
    </p>
    <table class="table">
        <tr style="background-color: #E1F4F3">
            <th style="text-align: center;" width="50%">
                @Html.DisplayNameFor(model => model.course1)
            </th>
            <th style="text-align: center;">
                @Html.DisplayNameFor(model => model.duration)
            </th>
            @if(Session["UserId"] != null)
        {
            <th style="text-align: center;">
                Set
            </th>
        }
        </tr>

        @foreach (var item in Model) {
        <tr style="text-align: center;">
            <td>
                @Html.DisplayFor(modelItem => item.course1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.duration)
            </td>
            @if(Session["UserId"] != null)
    {
            <td style="text-align: center;">
                <a href=@Url.Action("Edit", "Courses", new { id=item.id }) class="btn btn-warning">Edit</a>
                <a href=@Url.Action("Details", "Courses", new { id=item.id }) class="btn btn-success">Details</a>
                <a href=@Url.Action("Delete", "Courses", new { id=item.id }) class="btn btn-danger">Delete</a>
            </td>
    }
        </tr>
}

    </table>
